<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#03dff7"
        android:stretchColumns="*"

        >



        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="0dp"

            >

            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="true"
                android:text="ToggleButton"
                android:textOff="Requests"
                android:textOn="Requests"

                />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="false"
                android:text="ToggleButton"
                android:textOff="Invites"
                android:textOn="Invites" />

            <ToggleButton
                android:id="@+id/toggleButton5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="false"
                android:text="ToggleButton"
                android:textOff="Approvals"
                android:textOn="Approvals" />

        </TableRow>


    </TableLayout>


    <TextView
        android:id="@+id/noRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#71f1d609"
        android:text="No Requests, Go Ahead and ask to join an Arena"
        android:textSize="15dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noInvites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#71f1d609"
        android:text="No Invites, Go Ahead and invite someone to one of your Arenas"
        android:textSize="15dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/noApprovals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#71f1d609"
        android:text="No one has yet requested your approval to join one of your Arenas"
        android:textSize="15dp"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/requestsList"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/fragment_request"
        android:background="#6a1fea08"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/invitesList"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/fragment_invites"
        android:background="#6a1fea08"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/aprovalsList"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/fragment_aprovals"
        android:background="#6a1fea08"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</LinearLayout>